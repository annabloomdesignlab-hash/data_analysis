CREATE TABLE employees (
    id INT PRIMARY KEY,
    full_name VARCHAR(100),
    job_title VARCHAR(50),
    hire_date DATE
);

INSERT INTO employees VALUES (1, 'Anna Smith', 'Product Designer', '2024-03-12');
INSERT INTO employees VALUES (2, 'Mark Johnson', 'Backend Developer', '2023-11-05');

SELECT full_name, job_title, hire_date
FROM employees
WHERE hire_date > '2024-01-01'
ORDER BY hire_date DESC;
